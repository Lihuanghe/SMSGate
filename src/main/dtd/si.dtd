<!ENTITY % Datetime "CDATA">             <!-- ISO date and time -->
<!ENTITY % URI      "CDATA">             <!-- URI designating a 
                                              hypertext node    -->


<!--====================== The SI Element ======================-->
<!ELEMENT si (indication,info?)>


<!--================== The indication Element ==================-->
<!ELEMENT indication (#PCDATA)>
<!ATTLIST indication
  href	        %URI;                                      #IMPLIED
  si-id	        CDATA                                      #IMPLIED
  created	%Datetime;	                           #IMPLIED
  si-expires	%Datetime;	                           #IMPLIED
  action	(signal-none|signal-low|signal-medium|signal-high|delete)         #IMPLIED
>


<!--===================== The INFO Element =====================-->
<!ELEMENT info (item+)>

<!ELEMENT item (#PCDATA)>
<!ATTLIST item
  class	        NMTOKEN                                   #REQUIRED 
>

